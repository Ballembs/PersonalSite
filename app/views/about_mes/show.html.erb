<%- model_class = AboutMe -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @about_me.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dob) %>:</strong></dt>
  <dd><%= @about_me.dob %></dd>
  <dt><strong><%= model_class.human_attribute_name(:native) %>:</strong></dt>
  <dd><%= @about_me.native %></dd>
  <dt><strong><%= model_class.human_attribute_name(:schooling) %>:</strong></dt>
  <dd><%= @about_me.schooling %></dd>
  <dt><strong><%= model_class.human_attribute_name(:colege) %>:</strong></dt>
  <dd><%= @about_me.colege %></dd>
  <dt><strong><%= model_class.human_attribute_name(:batchelers) %>:</strong></dt>
  <dd><%= @about_me.batchelers %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              about_mes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_about_me_path(@about_me), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              about_me_path(@about_me),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
