<%= form_for @home, :html => { :class => "form-horizontal home" , :multipart => true } do |f| %>

    <% if @home.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@home.errors.count, "error") %> prohibited this home from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @home.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">

    <div class="controls">
      <%= f.file_field :image %>
    </div>
    <%= error_span(@home[:image]) %>
  </div>

  <div class="control-group">
    <%= f.label :about_me, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :about_me, :class => 'ckeditor' %>
    </div>
    <%= error_span(@home[:about_me]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            homes_path, :class => 'btn btn-default' %>

<% end %>
