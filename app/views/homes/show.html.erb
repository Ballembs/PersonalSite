<%- model_class = Home -%>
<div class="page-content">
  <dl class="content-right MyImage">
    <dd><%= image_tag @home.image.url %></dd>

  </dl>
  <dl>
    <dd>
      <p class="subhead">Balu In 30 Seconds</p>

      <%= raw@home.about_me %>

      <div class="right proftag">
        <div class="proficon left">Resume</div>
        <div class="proficon middleicon left">Projects</div>
        <div class="proficon lasticon left">Skils</div>
      </div>
      <% if user_signed_in? %>
      <%= link_to t('.back', :default => t("helpers.links.back")),
      homes_path, :class => 'btn btn-default'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
      edit_home_path(@home), :class => 'btn btn-default' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
      home_path(@home),
      :method => 'delete',
      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
      :class => 'btn btn-danger' %>
      <% end %>
    </dd>
  </dl>
</div>
